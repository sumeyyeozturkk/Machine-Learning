<!DOCTYPE html>
<html>
<head>
<title>Fiyat Tahmin Etme</title>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.js"></script>
<script>
(function() {
  "use strict";
  window.addEventListener("load", function() {
    var form = document.getElementById("evtahmin");
    form.addEventListener("submit", function(event) {
      if (form.checkValidity() == false) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add("was-validated");
    }, false);
  }, false);
}());
</script>
</head>
<body>

<form class="container-fluid" id="evtahmin" novalidate>
  <div class="row">
    <div class="mb-3">
      <label>Metrekare</label>
      <input type="text" class="form-control" name="metreKare" placeholder="Metrekare" required>
    </div>
  </div>
  <div class="row">
    <div class=" mb-3">
      <label>Oda Sayısı</label>
      <input type="text" class="form-control" name="odaSayisi" placeholder="Oda Sayısı" required>
    </div>  
  </div>
  <div class="row">
    <button class="btn btn-secondary" type="submit">Fiyatı Tahmin Et</button>
  </div>
</form>

</body>
</html>

